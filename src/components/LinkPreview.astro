---
import { getLinkPreview } from "link-preview-js";

interface Props {
  href: string;
  title: string;
  description?: string;
  imgSrc?: string;
}

const { title, href, description, imgSrc } = Astro.props;

let _title = title;
let _description = description ?? "";
let _imgSrc = imgSrc ?? "";

try {
  const details = await getLinkPreview(href);
  if ("title" in details) {
    _title = details.title;
    _description = details.description ?? "";
    _imgSrc = details.images[0] ?? "";
  }
} catch (e) {
  console.warn(e);
}
---

<a href={href} target="_blank">
  <div class="content">
    <span class="title">
      {_title}
      <i class="icons icon-link-ext"></i>
    </span>
    <span>{_description}</span>
    <div style="flex-grow: 1;"></div>
    <small>{href}</small>
  </div>
  <img src={_imgSrc} />
</a>

<style>
  a {
    display: flex;
    gap: 0.3rem;
    flex-direction: row;
    text-decoration: none;
    max-width: 100%;
    border: 1px solid var(--tx);
    overflow: hidden;
    margin: 0;
    border-radius: 0.5rem;
    transition:
      box-shadow 300ms ease-in-out,
      transform 300ms ease-in-out;
  }

  a:hover {
    box-shadow: -0.1rem 0.2rem;
    transform: translate(0.1rem, -0.2rem);
  }

  a .content {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    padding: 0.5rem;
  }

  .title {
    font-size: 1.2rem;
    font-weight: 700;
  }

  .content small {
    position: relative;
    color: var(--tx-2);
    max-height: 1rem;
    word-break: break-all;
    overflow: hidden;
    padding-right: 0.5rem;
  }

  .content small::before {
    position: absolute;
    content: "...";
    inset-block-end: 0;
    inset-inline-end: 0;
  }

  .content small::after {
    position: absolute;
    content: "";
    inset-inline-end: 0;
    width: 0.5rem;
    height: 1rem;
    background: var(--bg);
  }

  i {
    opacity: 0;
    position: absolute;
    float: inline-end;
    transition: opacity 300ms ease-in-out;
  }

  a:hover i {
    opacity: 1;
  }

  a img {
    max-width: 7rem;
    min-width: 0;
    object-fit: cover;
  }
</style>
