const links = [
  {
    href: "https://github.com/r3dacted42",
    title: "github",
    target: "_blank",
    iconClass: "icon icon-github",
  },
  {
    href: "https://linkedin.com/in/priyansh-agr/",
    title: "linkedin",
    target: "_blank",
    iconClass: "icon icon-linkedin",
  },
  {
    action:
      "window.location.href = 'mailto:?subject=Hello ðŸ‘‹&body=psst! send email to priyansh.agr4 [at] gmail [dot] com'",
    title: "email",
    iconClass: "icon icon-mail",
  },
];
---

<footer>
  {
    links.map(({ href, action, title, target, iconClass }) => {
      if (href)
        return (
          <a href={href} title={title} aria-label={title} target={target}>
            <i class={iconClass} />
