---
import "../style.css";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { exp, edu } from "../config/aboutData";
import TimeSpan from "../components/TimeSpan.astro";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>Priyansh Agrahari</title>
    <meta name="description" content="Priyansh Agrahari's website" />
  </head>
  <body>
    <header>
      <h1>Hi, I'm Priyansh Agrahari :)</h1>
      <Navigation />
    </header>

    <main>
      <p>I enjoy working with software, nature and minimalism.</p>
      <p>Welcome to my site!</p>

      <h2>Work Experience</h2>
      <TimeSpan data={exp} />

      <h2>Education</h2>
      <TimeSpan data={edu} />
    </main>

    <Footer />
  </body>
</html>
